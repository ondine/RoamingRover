<body class="signup-background">

<nav class="navbar navbar-default no-rad">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-main">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/dashboard">RoamingRover</a>
    </div>
    
    <div class="collapse navbar-collapse" id="navbar-main">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= session[:first_name] + " " + session[:last_name] %> <i class="fa fa-caret-down"></i></a>
                <ul class="dropdown-menu">
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </li>
        </ul>
    </div>
</nav>

<div class="signup-container">
    <%= form_tag do %>
	<div class="signup-header">
    	Request a Dog Walker
    </div>
    <div class="signup-field-headers">
    	Title of your post
    </div>
    <div class="margin-top-10">
    	<input name="request_title" class="form-control" placeholder="Your title" type="text" />
    </div>
    <div class="signup-field-headers">
    	Description of what you need
    </div>
    <div class="margin-top-10">
    	<textarea name="request_description" style="min-height:120px;" class="form-control" placeholder="Use this space to tell your potential walkers what you need them to do. Have any special requests? Here is the best place to put them."></textarea>
    </div>
    <div class="signup-field-headers">
    	Date you need help
    </div>
    <div class="margin-top-10">
    	<input name="request_date" type="text" id="cl-datepicker" class="form-control" placeholder="Click here to select date" value="" />
    </div>
    <div class="signup-field-headers">
    	Time you need help
    </div>
    <div class="row margin-top-10">
    	<div class="col-sm-5">
        	<input name="request_time1" type="text" class="form-control" placeholder="example: 10:00" />
        </div>
        <div class="col-sm-3 mobile-top-head">
        	<select name="request_time2" class="form-control">
            	<option value="am">AM</option>
                <option value="pm">PM</option>
            </select>
        </div>
    </div>
    <div class="signup-field-headers">
    	How much are you willing to pay?
    </div>
    <div class="margin-top-10">
    	<input name="request_payment" type="text" class="form-control" placeholder="example: 40 per hour" />
    </div>
    <div class="margin-top-20 txt-center">
        <button class="btn btn-primary">Submit Request</button>
    </div>
    <% end %>
</div>

<%= javascript_include_tag "application", "data-turbolinks-track" => true %>

<script type="text/javascript">
    $("#cl-datepicker").datepicker({
        dateFormat: 'yy-mm-dd'
    });
</script>

</body>
